{
    "name": "ddpm-RS-CDHead-GVLM-CD-Physical",
    "phase": "train",
    "gpu_ids": [0, 1, 2, 3],

    "path": {
        "log": "logs/gvlm_cd_physical",
        "tb_logger": "tb_logger/gvlm_cd_physical",
        "results": "results/gvlm_cd_physical",
        "checkpoint": "checkpoint/gvlm_cd_physical",
